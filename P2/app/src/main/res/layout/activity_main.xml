<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Essa é a sua lista de compras! Insira o produto desejado, a quantidade e o valor unitário."
        android:textSize="24dp" />


    <EditText
        android:id="@+id/id_descricao"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:hint="Digite a descrição"
        android:inputType="text"
        android:textSize="22sp" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/id_unitario"
        android:inputType="numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o valor unitário"
        android:textSize="22sp"
        android:layout_margin="10dp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:id="@+id/id_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite a quantidade"
        android:textSize="22sp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/id_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Salvar"
        android:textSize="18dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/id_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Valor Unitário:\n\n"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/id_resultado"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textSize="22sp"
        android:padding="10dp"
        android:text="Valor Total:\n\n" />


</LinearLayout>